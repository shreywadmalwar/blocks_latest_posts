{
	"apiVersion": 2,
	"name": "blocks-course/latest-post",
	"title": "Latest Posts",
	"category": "widgets",
	"icon": "admin-post",
	"description": "Display and filter latest posts.",
	"keywords": ["latest", "posts"],
	"supports": {
		"html": false
	},
	"textdomain": "latest-posts",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"attributes": {
		"numberOfPosts": {
			"type": "number",
			"default": 5
		},
		"displayFeaturedImage": {
			"type": "boolean",
			"default": true
		},
		"order": {
			"type": "string",
			"default": "desc"
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		},
		"categories": {
			"type": "array",
			"items": {
				"type": "object"
			}
		}
	}
}
